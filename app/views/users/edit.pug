extends /layouts/application.pug

block define
  - const section = 'users';
  - const pageTitle = 'Редактирование пользователя';
  - const defaultCol = { label: 'col-4', input: 'col-8' };

block content
  //- параметры
  //-   f: { name, object, model, errors }
  div.row.justify-content-center
    div.col-xl-5.col-lg-6.col-md-7.col-sm-9
      +title('Пользователь')
      +formFor(f, { url: urlFor('updateUser', f.object.id), method: 'patch' })
        .form-group.row
          +input(f, 'firstName', 'Имя', { autofocus: true })
        .form-group.row
          +input(f, 'lastName', 'Фамилия')
        .form-group.row
          +input(f, 'email', 'E-mail')
        .form-group.row
          +input(f, 'password', 'Пароль', { as: 'password' })
        +formFooter()

