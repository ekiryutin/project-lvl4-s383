extends /layouts/application.pug

block define
  - const pageTitle = 'Регистрация';

block content
  //- параметры
  //-   f: { name, object, model, errors }
  div.row.justify-content-center
    div.col-xl-5.col-lg-6.col-md-7.col-sm-9
      +title(pageTitle)
      +formFor(f, { url: urlFor('saveUser'), method: 'post' })
        +inputH(f, 'firstName', 'Имя')
        +inputH(f, 'lastName', 'Фамилия')
        +inputH(f, 'email', 'E-mail')
        +inputH(f, 'password', 'Пароль', { as: 'password' })
        +formFooter()

