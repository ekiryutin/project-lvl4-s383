extends /layouts/application.pug

block content
  //- параметры
  //-   user
  //-   access
  div.row.justify-content-center
    div.col-xl-5.col-lg-6.col-md-7.col-sm-9
      +title('Пользователь')
        if access.edit
          +buttonEdit(urlFor('editUser', user.id))
        if access.delete
          +buttonDelete()
      div.card.card-body.shadow-sm
        form
          +inputTextH(user, 'firstName', 'Имя')
          +inputTextH(user, 'lastName', 'Фамилия')
          +inputTextH(user, 'email', 'E-mail')
      //- div.pt-3
      //-  a.btn.btn-outline-primary(href= urlFor('users'))
      //-    // i.fas.fa-arrow-left
      //-    span.pl-1 К списку
  +confirmDelete('Вы уверены, что хотите удалить пользователя?', urlFor('deleteUser', user.id))

