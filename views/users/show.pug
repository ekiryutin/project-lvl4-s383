extends /layouts/application.pug

block define
  - const section = 'users';
  - const pageTitle = 'Просмотр пользователя';
  - const defaultCol = { label: 'col-4', input: 'col-8' };

block content
  //- параметры
  //-   user
  //-   access
  div.row.justify-content-center
    div.col-xl-5.col-lg-6.col-md-7.col-sm-9
      +title('Пользователь')
        if access.edit
          +buttonEdit(urlFor('editUser', user.id))
        if access.delete
          +buttonDelete()
      div.card.card-body.shadow-sm
        form
          +inputText(user.firstName, 'Имя')
          +inputText(user.lastName, 'Фамилия')
          +inputText(user.email, 'E-mail')
      //- div.pt-3
      //-  a.btn.btn-outline-primary(href= urlFor('users'))
      //-    // i.fas.fa-arrow-left
      //-    span.pl-1 К списку
  +confirmDelete('Вы уверены, что хотите удалить пользователя?', urlFor('deleteUser', user.id))

