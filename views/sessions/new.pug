extends /layouts/application.pug

block content
  div.row.justify-content-center
    div.col-xl-4.col-lg-5.col-md-6.col-sm-8
      +title('Вход в систему')
      +formFor(f, { url: urlFor('session'), method: 'post' })
        +input(f, 'email', 'E-mail')
        +input(f, 'password', 'Пароль', { as: 'password' })
        +formFooter('Войти')

